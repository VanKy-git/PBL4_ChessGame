<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="PBL4_ChessPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Khai báo các entity -->
        <class>com.database.server.Entity.user</class>
        <class>com.database.server.Entity.matches</class>
        <class>com.database.server.Entity.chat_message</class>

        <!-- Cấu hình kết nối DB -->
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/DataBase_PBL4"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="01112005"/>

            <!-- Cấu hình Hibernate -->
            <!-- Hibernate 6 tự động phát hiện dialect -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>